{% block body %}




    <div class="container" style="margin-top: 100px ; max-width: 50rem;" >
        <h3 class="text-center text-white pt-5"></h3>
        <div class="card border-primary mb-3" >
            <div class="card-header">
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Borrow Date </th>
                <th>Return Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.livres }}</td>
                <td>{{ emprunt.dateEmp ? emprunt.dateEmp|date('Y-m-d') : '' }}</td>

                <td>{{ emprunt.dateRet ? emprunt.dateRet|date('Y-m-d') : '' }}</td>

                <td>

                    <a href="{{ path('emprunt_show', {'id': emprunt.id}) }}" >
                        <button class="btn btn-primary btn-xs " type="button" > Show </button>

                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                {% for msg in app.flashes('Success') %}
                    <div class="alert alert-success"> {{ msg }} </div>
                {% endfor %}
</div>
        </div>
    </div>

{% endblock %}

